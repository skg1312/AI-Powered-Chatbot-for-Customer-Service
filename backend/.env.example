# Environment Variables for Medical AI Chatbot Service
# Copy this file to .env and fill in your actual API keys

# Groq API Configuration
GROQ_API_KEY="gsk_your_groq_api_key_here"

# Pinecone Vector Database Configuration
PINECONE_API_KEY="your_pinecone_api_key_here"
PINECONE_ENVIRONMENT="your_pinecone_environment"
PINECONE_INDEX_NAME="medical-chatbot-index"

# Hugging Face API Configuration
HF_TOKEN="hf_your_huggingface_token_here"

# Tavily AI Search API Configuration
TAVILY_API_KEY="tvly_your_tavily_api_key_here"

# Application Configuration
ENVIRONMENT="development"
DEBUG=True
API_HOST="0.0.0.0"
API_PORT=8000

# CORS Configuration - Add all allowed origins separated by commas
# Use "*" to allow all origins (recommended for public widget)
# Or specify exact domains: "https://example.com,https://app.mydomain.com"
ALLOWED_ORIGINS="*"

# JWT Configuration (optional - auto-generated if not provided)
JWT_SECRET_KEY="your_jwt_secret_key_here"

# Database Configuration (optional - uses file-based storage if not configured)
DATABASE_TYPE="file"  # Options: "file" or "supabase"

# Supabase Database Configuration (only needed if DATABASE_TYPE="supabase")
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_KEY="your_supabase_service_key"
